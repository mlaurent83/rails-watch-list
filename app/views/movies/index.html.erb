<h1>All movies</h1>

<div class="row"> <!-- This row will contain all the cards -->
  <% @movies.each do |movie| %>
    <div class="col-md-4"> <!-- Adjust the number accordingly for the desired layout -->
      <div class="card" style="width: 100%;"> <!-- Bootstrap cards need a width, 100% makes it responsive -->
        <% if movie.poster_url.present? %>
          <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <p class="card-text">Rating: <%= movie.rating %></p>
          <!-- Additional elements like buttons can go here -->
        </div>
      </div>
    </div>
  <% end %>
</div>
